# Jenkins repo
resource "aws_ecr_repository" "jenkins" {
  name                 = var.jenkins_repo_name
  image_tag_mutability = "MUTABLE"

  image_scanning_configuration {
    scan_on_push = true
  }

  encryption_configuration {
    encryption_type = "AES256"
  }

  tags = var.tags
}

# Create lifecycle policy to limit to 5 images
resource "aws_ecr_lifecycle_policy" "jenkins_lifecycle" {
  repository = aws_ecr_repository.jenkins.name

  policy = <<EOF
{
    "rules": [
        {
            "rulePriority": 1,
            "description": "Keep last 5 images",
            "selection": {
                "tagStatus": "any",
                "countType": "imageCountMoreThan",
                "countNumber": 5
            },
            "action": {
                "type": "expire"
            }
        }
    ]
}
EOF
}